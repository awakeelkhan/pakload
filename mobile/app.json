{
  "expo": {
    "name": "PakLoad",
    "slug": "pakload",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#16a34a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pakload.app",
      "icon": "./assets/icon.png",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "PakLoad needs your location to track shipments and show nearby loads.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "PakLoad needs your location to provide real-time tracking updates."
      }
    },
    "android": {
      "package": "com.pakload.app",
      "versionCode": 2,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#22c55e"
      },
      "edgeToEdgeEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "FOREGROUND_SERVICE",
        "INTERNET",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "ACCESS_NETWORK_STATE"
      ],
      "usesCleartextTraffic": true,
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-location",
      "expo-secure-store",
      "expo-web-browser"
    ],
    "scheme": "pakload",
    "extra": {
      "apiUrl": "http://ec2-13-50-123-3.eu-north-1.compute.amazonaws.com",
      "eas": {
        "projectId": "pakload-mobile"
      }
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}
