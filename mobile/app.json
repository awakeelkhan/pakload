{
  "expo": {
    "name": "PakLoad",
    "slug": "pakload",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#16a34a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pakload.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "PakLoad needs your location to track shipments and show nearby loads.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "PakLoad needs your location to provide real-time tracking updates."
      }
    },
    "android": {
      "package": "com.pakload.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "FOREGROUND_SERVICE"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-location",
      "expo-secure-store",
      "expo-web-browser"
    ],
    "scheme": "pakload",
    "extra": {
      "apiUrl": "http://ec2-13-50-123-3.eu-north-1.compute.amazonaws.com"
    }
  }
}
